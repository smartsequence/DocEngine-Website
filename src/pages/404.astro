---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<BaseHead title={`404 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
				<h1 class="text-6xl font-bold mb-4">404</h1>
				<h2 class="text-2xl mb-6">找不到頁面</h2>
				<p class="text-gray-600 mb-8">抱歉，您訪問的頁面不存在。</p>
				<a href="/" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition">
					返回首頁
				</a>
			</div>
		</main>
		<Footer />
	</body>
</html>
